<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle1">
        <item name="android:textColor">#6703F4</item>
        <item name="android:background">@drawable/oval_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/oval_backfield</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TextStyle1">
        <item name="android:textColor">#546E7A</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColorHint">#546E7A</item>
    </style>

    <style name="TextStyle2">
        <item name="android:textColor">#546E7A</item>
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColorHint">#546E7A</item>
    </style>

    <style name="ColumnDisplayStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#546E7A</item>
        <item name="android:layout_columnSpan">1</item>
    </style>

    <style name="ColumnDisplayStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#546E7A</item>
        <item name="android:layout_columnSpan">2</item>
    </style>
</resources>